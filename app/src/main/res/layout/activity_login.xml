<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="30dp"
    tools:context=".view.LoginActivity">
    <LinearLayout
        android:id="@+id/llFormLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_edittext"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_baseline_account_circle_24"
            android:hint="Username"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_edittext"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:hint="Password"
            />
    </LinearLayout>
    <CheckBox
        android:id="@+id/cbKeepUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keep Username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llFormLogin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Update"
        android:gravity="center"
        android:drawablePadding="5dp"
        app:drawableStartCompat="@drawable/ic_baseline_system_update_alt_24"
        app:layout_constraintTop_toBottomOf="@id/llFormLogin"
        app:layout_constraintBottom_toBottomOf="@id/cbKeepUsername"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>