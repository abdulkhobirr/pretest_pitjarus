<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.VisitationFragment">
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="?selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/labelListStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Store"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintStart_toEndOf="@id/btnBack"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Store"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/labelListStore"
        app:layout_constraintStart_toStartOf="@id/labelListStore"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"/>
    <ImageView
        android:id="@+id/btnBook"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="4dp"
        android:background="?selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edtSearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="10dp"
        android:hint="Cari Toko/Distributor"
        android:background="@drawable/bg_edittext"
        android:drawableStart="@drawable/ic_baseline_search_24"
        app:layout_constraintTop_toBottomOf="@id/btnBack"/>
    <ImageView
        android:id="@+id/ivMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/image_map"
        app:layout_constraintTop_toBottomOf="@id/edtSearch"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvListKunjungan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="List kunjungan 19-08-2020"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/ivMap"/>
    <com.kennyc.view.MultiStateView
        android:id="@+id/msvListKunjungan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:msv_viewState="content"
        app:msv_loadingView="@layout/default_loading_layout"
        app:msv_errorView="@layout/default_error_layout"
        app:layout_constraintTop_toBottomOf="@id/tvListKunjungan"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListKunjungan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            tools:listitem="@layout/item_store"
            app:layout_constraintVertical_bias="0" />
    </com.kennyc.view.MultiStateView>
</androidx.constraintlayout.widget.ConstraintLayout>