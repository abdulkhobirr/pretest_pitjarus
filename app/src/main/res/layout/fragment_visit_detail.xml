<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.VisitDetailFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/labelMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Menu"
            android:padding="10dp"
            android:elevation="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userA"
            android:paddingStart="10dp"
            android:textSize="12sp"
            android:elevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/labelMainMenu"
            app:layout_constraintStart_toStartOf="@id/labelMainMenu" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_book"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelMainMenu"
            app:layout_constraintBottom_toBottomOf="@id/labelMainMenu" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvUsername"
            android:background="@color/darkerGrey"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet"
            android:textColor="@color/blue"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/divider"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/clToolbar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivStore"
                android:layout_width="70dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_user"
                app:layout_constraintTop_toTopOf="@id/llStoreDetail"
                app:layout_constraintBottom_toBottomOf="@id/llStoreDetail"
                app:layout_constraintStart_toStartOf="parent"/>
            <LinearLayout
                android:id="@+id/llStoreDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivStore"
                app:layout_constraintEnd_toEndOf="parent">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvStoreId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ST0001"
                    android:textColor="@color/white"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvStoreName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Indomaret Komsen"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cluster : Small"
                    android:textColor="@color/white"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TT Regular - ERTM Big - Pareto"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <include
        android:id="@+id/layoutMenu"
        layout="@layout/layout_menu"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/mcvStore"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/layoutMenu"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Dashboard Score"
            android:textStyle="bold"
            android:textColor="@color/orange"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_close_24"
            app:civ_circle_background_color="@color/red"
            app:layout_constraintTop_toTopOf="@id/labelPerfectScore"
            app:layout_constraintBottom_toBottomOf="@id/labelPerfectScore"
            app:layout_constraintEnd_toStartOf="@id/labelPerfectScore"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/labelPerfectScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfect Score"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDashboardStore"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="10dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/item_store"
            app:layout_constraintTop_toBottomOf="@id/labelPerfectScore"
            app:layout_constraintBottom_toTopOf="@id/btnFinish"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFinish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingVertical="15dp"
            android:text="Selesai"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>